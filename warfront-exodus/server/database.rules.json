{
  "rules": {
    // Autenticación requerida para todo
    ".read": "auth != null",
    ".write": "auth != null",
    
    // Sesiones de juego
    "gameSessions": {
      "$sessionId": {
        // Crear solo si autenticado
        ".write": "auth != null",
        
        // Validar estructura
        ".validate": "newData.hasChildren(['createdAt', 'hostId', 'status'])",
        
        "players": {
          "$playerId": {
            // Solo el jugador puede añadirse a sí mismo
            ".write": "$playerId === auth.uid"
          }
        },
        
        "snapshots": {
          "$playerId": {
            // Solo actualizar propios snapshots
            ".write": "$playerId === auth.uid",
            ".validate": "newData.hasChildren(['position', 'rotation', 'timestamp'])"
          }
        },
        
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['type', 'sender', 'timestamp'])",
            "sender": {
              ".validate": "newData.val() === auth.uid"
            }
          }
        }
      }
    },
    
    // Cola de matchmaking
    "matchmakingQueue": {
      "$queueId": {
        ".write": "auth != null && data.child('playerId').val() === auth.uid",
        ".validate": "newData.hasChildren(['playerId', 'timestamp'])"
      }
    },
    
    // Escuadrones
    "squads": {
      "$squadId": {
        // Líder puede modificar
        ".write": "data.child('leader').val() === auth.uid || newData.child('leader').val() === auth.uid",
        
        "members": {
          "$memberId": {
            ".write": "$memberId === auth.uid || root.child('squads').child($squadId).child('leader').val() === auth.uid"
          }
        }
      }
    },
    
    // Presencia
    "presence": {
      "$userId": {
        ".write": "$userId === auth.uid"
      }
    },
    
    // Invitaciones
    "players": {
      "$playerId": {
        "invites": {
          ".write": "auth != null"
        },
        "matchFound": {
          ".write": "auth != null"
        }
      }
    },
    
    // Leaderboards (solo lectura para clientes)
    "leaderboards": {
      ".write": false
    }
  }
}