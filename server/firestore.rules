rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funciones auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Perfiles de usuario
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Estadísticas de jugador
    match /playerStats/{userId} {
      allow read: if isAuthenticated();
      allow write: if false; // Solo Cloud Functions
    }
    
    // Resultados de partidas
    match /matchResults/{matchId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.players.hasKey(request.auth.uid);
      allow update, delete: if isAdmin();
    }
    
    // Configuración de armas
    match /weapons/{weaponId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Inventario de jugador
    match /inventories/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Progresión y desbloqueos
    match /progression/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Solo Cloud Functions
    }
    
    // Reportes de jugadores
    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
    
    // Detecciones de cheat
    match /cheatDetections/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; // Solo sistema
    }
  }
}